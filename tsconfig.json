{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist", // Ensure compiled files are output to the "dist" folder
    "rootDir": ".", // Set rootDir to the project root
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["client/**/*", "server/**/*"], // Include client and server directories
  "exclude": ["dist", "node_modules"],
  "name": "main",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run client:build && npm run server",
    "start:dev": "concurrently \"npm run server:dev\" \"wait-on tcp:3001 && npm run client:dev\"",
    "server": "cd server && npm start",
    "server:dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "client:build": "cd client && npm run build",
    "client:dev": "cd client && npm run dev"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "typescript": "^5.2.2",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.4.0"
  }
}