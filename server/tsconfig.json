{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src", // Ensure TypeScript compiles files from the "src" folder
    "outDir": "dist", // Ensure compiled files go to the "dist" folder
    "esModuleInterop": true,
    "module": "ES2020", // Align with root tsconfig.json
    "moduleResolution": "Node",
    "target": "ES2020",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
