{
  "name": "main",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run client:build && npm run server",
    "start:dev": "concurrently \"npm run server:dev\" \"wait-on tcp:3001 && npm run client:dev\"",
    "server": "cd server && npm start",
    "server:dev": "nodemon --watch src --ext ts --exec ts-node src/server.ts",
    "client:build": "cd client && npm run build",
    "client:dev": "cd client && npm run dev"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^6.2.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.4.0"
  }
}
